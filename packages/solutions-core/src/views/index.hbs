<div class="container mt-5">
    {{#each projects}}
    <div class="sheet {{this.status}}">
        <div class="row">
            <div class="col-7">
                <div class="sheet-header">
                    <a class="sheet-title" href="/{{this.slug}}">{{this.name}}</a>
                    <a target="_blank" href="{{this.address}}">{{this.address}}</a>

                    <div class="sheet-text mt-2">{{this.description}}</div>
                </div>
                <div class="sheet-section">
                    <span>Average response time: 66 ms</span>
                </div>

                <span>Status: <b class="font-weight-bold text-uppercase">{{this.status}}</b></span>

            </div>
            <div class="col">

                {{#if this.image}}
                <img class="project-preview" src="/images/{{this.image}}" />
                {{/if}}

            </div>
        </div>
    </div>
    {{/each}}
</div>