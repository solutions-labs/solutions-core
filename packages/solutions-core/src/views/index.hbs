{{!< default}} {{#contentFor 'pageStyles' }} <style>
    .clicker {
    color: blue;
    };
    </style>
    {{/contentFor}}

    <div class="container mt-5">
        <h1>
            Upptime is the open-source uptime monitor and status page, powered entirely by GitHub.
        </h1>

        <h3 class="mt-4">Active Status</h3>

        {{#each projects}}
        <div class="sheet {{this.status}}">
            <div class="row">
                <div class="col-7">
                    <div class="sheet-header">
                        <a class="sheet-title" href="/{{this.slug}}">{{this.name}}</a>
                        <div class="sheet-text">{{this.address}}</div>
                        <div class="sheet-text">{{this.description}}</div>
                    </div>
                    <div class="sheet-section">
                        <p>Overall uptime: 100.00%</p>
                        <span>Average response time: 66 ms</span>
                    </div>

                </div>
                <div class="col">
                    <img class="project-preview" src="/images/{{this.image}}" />
                </div>
            </div>
        </div>
        {{/each}}
    </div>