{{!< default}} {{#contentFor 'pageStyles' }} <style>
    .clicker {
    color: blue;
    };
    </style>
    {{/contentFor}}

    <div class="container mt-5">
        <div class="sheet {{project.status}}">
            <div class="row">
                <div class="col-7">
                    <div class="sheet-header">
                        <a class="sheet-title" href="/{{project.slug}}">{{project.name}}</a>
                        <a target="_blank" href="{{project.address}}">{{project.address}}</a>
                        <div class="sheet-text mt-2">{{project.description}}</div>
                    </div>
                    <div class="sheet-section">
                        <p>Overall uptime: 100.00%</p>
                        <span>Average response time: 66 ms</span>
                    </div>

                </div>
                <div class="col">
                    {{#if project.image}}
                    <img class="project-preview" src="/images/{{project.image}}" />
                    {{/if}}
                </div>
            </div>
        </div>
    </div>